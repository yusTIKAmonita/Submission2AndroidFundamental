<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mysubmission2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="com.example.rodesta_dicodingsubmission3.READ_DATABASE"
        android:protectionLevel="normal" />

    <permission
        android:name="com.example.rodesta_dicodingsubmission3.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySubmission2">
        <activity android:name=".NotificationActivity"></activity>
        <activity android:name=".ui.FavoriteActivity" />
        <activity android:name=".ui.DetailActivity" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:name=".AlaramReceiver"
            android:enabled="true"
            android:exported="true"/>

        <provider
            android:name="com.example.mysubmission2.FavoriteProvider"
            android:authorities="${applicationId}"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.example.rodesta_dicodingsubmission3.READ_DATABASE"
            android:writePermission="com.example.rodesta_dicodingsubmission3.WRITE_DATABASE"/>

    </application>

</manifest>